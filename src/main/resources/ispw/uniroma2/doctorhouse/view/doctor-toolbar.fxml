<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="view" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="ispw.uniroma2.doctorhouse.view.DoctorToolbarController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="-Infinity" vgrow="NEVER"/>
    </rowConstraints>
    <Button fx:id="incomingBtn" mnemonicParsing="false" onAction="#goToIncoming" text="Incoming Appointments"
            textAlignment="CENTER" wrapText="true" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
        <GridPane.margin>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </GridPane.margin>
    </Button>
    <Button fx:id="logoutBtn" mnemonicParsing="false" onAction="#goToLogout" text="Logout" textAlignment="CENTER"
            wrapText="true" GridPane.columnIndex="4" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
        <GridPane.margin>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </GridPane.margin>
    </Button>
    <Button fx:id="pendingBtn" mnemonicParsing="false" onAction="#goToPending" text="Pending Requests of Rearrangement"
            textAlignment="CENTER" wrapText="true" GridPane.columnIndex="1" GridPane.halignment="CENTER"
            GridPane.valignment="CENTER">
        <GridPane.margin>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </GridPane.margin>
    </Button>
    <Button fx:id="requestBtn" mnemonicParsing="false" onAction="#goToRequest" text="Request Prescription"
            textAlignment="CENTER" wrapText="true" GridPane.columnIndex="2" GridPane.halignment="CENTER"
            GridPane.valignment="CENTER">
        <GridPane.margin>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </GridPane.margin>
    </Button>
    <Button fx:id="responseBtn" mnemonicParsing="false" onAction="#goToResponse" text="Response Prescription"
            textAlignment="CENTER" wrapText="true" GridPane.columnIndex="3" GridPane.halignment="CENTER"
            GridPane.valignment="CENTER">
        <GridPane.margin>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </GridPane.margin>
    </Button>
</GridPane>
